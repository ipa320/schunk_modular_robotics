<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find schunk_description)/urdf/pw70/pw70.gazebo.xacro" />
  <xacro:include filename="$(find schunk_description)/urdf/pw70/pw70.transmission.xacro" />

  <xacro:macro name="schunk_pw70" params="parent name *origin is_upsidedown">

    <xacro:unless value="${is_upsidedown}">

      <joint name="${name}_joint" type="fixed" >
        <xacro:insert_block name="origin" />
        <parent link="${parent}" />
        <child link="${name}_link" />
      </joint>

      <link name="${name}_link">
        <xacro:default_inertial/>
      </link>

      <joint name="${name}_tilt_joint" type="revolute" >
        <origin xyz="0 0 0.07" rpy="0 0 0"/>
        <parent link="${name}_link" />
        <child link="${name}_tilt_link" />
        <axis xyz="0 1 0" />
        <limit effort="12.0" velocity="4.1" lower="${-4/6 * M_PI}" upper="${4/6 * M_PI}"/>
        <calibration rising="0.0"/>
      </joint>

      <link name="${name}_tilt_link">
        <xacro:default_inertial/>
        <visual>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>
            <mesh filename="package://schunk_description/meshes/pw70/pw70_tilt.dae" />
          </geometry>
        </visual>
        <!--
        <collision>
          <geometry>
            <mesh filename="package://schunk_description/meshes/pw70/pw70_tilt.stl" />
          </geometry>
        </collision>
        -->
      </link>

      <joint name="${name}_pan_joint" type="revolute" >
        <origin xyz="0 0 0.0951" rpy="0 0 0"/>
        <parent link="${name}_tilt_joint" />
        <child link="${name}_pan_link" />
        <axis xyz="0 0 1" />
        <limit effort="200" velocity="${2 * M_PI}" lower="${-7/3 * M_PI}" upper="${7/3 * M_PI}"/>
        <calibration rising="0.0"/>
      </joint>

      <link name="${name}_pan_link">
        <xacro:default_inertial/>
        <visual>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>
            <mesh filename="package://schunk_description/meshes/pw70/pw70_pan.dae" />
          </geometry>
        </visual>
        <!--
        <collision>
          <geometry>
            <mesh filename="package://schunk_description/meshes/pw70/pw70_pan.stl" />
          </geometry>
        </collision>
        -->
      </link>


      <joint name="${name}_tool_joint" type="fixed" >
        <origin xyz="0 0 0.07" rpy="0 0 0"/>
        <parent link="${name}_pan_link" />
        <child link="${name}_tool_link" />
      </joint>

      <link name="${name}_tool_link">
        <xacro:default_inertial/>
        <visual>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>
            <mesh filename="package://schunk_description/meshes/pw70/pw70_base.dae" />
          </geometry>
        </visual>
        <!--
        <collision>
          <geometry>
            <mesh filename="package://schunk_description/meshes/pw70/pw70_base.stl" />
          </geometry>
        </collision>
        -->
      </link>
    </xacro:unless>

    <xacro:if value="${is_upsidedown}">

      <joint name="${name}_joint" type="fixed" >
        <xacro:insert_block name="origin" />
        <parent link="${parent}" />
        <child link="${name}_link" />
      </joint>

      <link name="${name}_link">
        <xacro:default_inertial/>
        <visual>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>
            <mesh filename="package://schunk_description/meshes/pw70/pw70_base.dae" />
          </geometry>
        </visual>
        <!--
        <collision>
          <geometry>
            <mesh filename="package://schunk_description/meshes/pw70/pw70_base.stl" />
          </geometry>
        </collision>
        -->
      </link>

      <joint name="${name}_pan_joint" type="revolute" >
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="${name}_link" />
        <child link="${name}_pan_link" />
        <axis xyz="0 0 -1" />
        <limit effort="200" velocity="${2 * M_PI}" lower="${-7/3 * M_PI}" upper="${7/3 * M_PI}"/>
        <calibration rising="0.0"/>
      </joint>

      <link name="${name}_pan_link">
        <xacro:default_inertial/>
        <visual>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>
            <mesh filename="package://schunk_description/meshes/pw70/pw70_pan.dae" />
          </geometry>
        </visual>
        <!--
        <collision>
          <geometry>
            <mesh filename="package://schunk_description/meshes/pw70/pw70_pan.stl" />
          </geometry>
        </collision>
        -->
      </link>

      <joint name="${name}_tilt_joint" type="revolute" >
        <origin xyz="0 0 0.0951" rpy="0 0 0"/>
        <parent link="${name}_pan_link" />
        <child link="${name}_tilt_link" />
        <axis xyz="0 -1 0" />
        <limit effort="12.0" velocity="4.1" lower="${-4/6 * M_PI}" upper="${4/6 * M_PI}"/>
        <calibration rising="0.0"/>
      </joint>

      <link name="${name}_tilt_link">
        <xacro:default_inertial/>
        <visual>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>
            <mesh filename="package://schunk_description/meshes/pw70/pw70_tilt.dae" />
          </geometry>
        </visual>
        <!--
        <collision>
          <geometry>
            <mesh filename="package://schunk_description/meshes/pw70/pw70_tilt.stl" />
          </geometry>
        </collision>
        -->
      </link>

      <joint name="${name}_tool_joint" type="fixed" >
        <origin xyz="0 0 0.07" rpy="0 0 0"/>
        <parent link="${name}_tilt_link" />
        <child link="${name}_tool_link" />
      </joint>

      <link name="${name}_tool_link">
        <xacro:default_inertial/>
      </link>
    </xacro:if>

    <!-- extensions -->
    <xacro:schunk_pw70_gazebo name="${name}" />
    <xacro:schunk_pw70_transmission name="${name}" />


  </xacro:macro>
</robot>

